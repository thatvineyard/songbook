{
  "name": "songbook",
  "version": "1.0.0",
  "description": "A registry for storing lyrics and melodies of songs. ",
  "main": "src/app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-p dev-backend dev-frontend",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "start": "run-p dev-backend dev-frontend",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "build": "run-p build-backend build-frontend",
    "build-backend": "cd backend && npm run build",
    "build-frontend": "cd frontend && npm run build",
    "release": "run-p release-backend release-frontend",
    "release-backend": "cd backend && npm run release",
    "release-frontend": "cd frontend && npm run release",
    "install-all": "run-p install-frontend install-backend",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}